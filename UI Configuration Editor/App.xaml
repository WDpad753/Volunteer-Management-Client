<Application x:Class="UI_Configuration_Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI_Configuration_Editor"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <!-- Expander Style -->
                <ResourceDictionary Source="/UIBaseClass;component/Styles/CustomExpanderStyle.xaml"/>
                <!-- Button Style -->
                <ResourceDictionary Source="/UIBaseClass;component/Styles/Buttons/ButtonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
