	<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RootNamespace>Volunteer_Management_UI</RootNamespace>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<Deterministic>false</Deterministic>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<ShouldCreateLogs>True</ShouldCreateLogs>
		<AdvancedSettingsExpanded>True</AdvancedSettingsExpanded>
		<UpdateAssemblyVersion>True</UpdateAssemblyVersion>
		<UpdateAssemblyFileVersion>True</UpdateAssemblyFileVersion>
		<UpdateAssemblyInfoVersion>False</UpdateAssemblyInfoVersion>
		<UpdatePackageVersion>False</UpdatePackageVersion>
		<AssemblyInfoVersionType>SettingsVersion</AssemblyInfoVersionType>
		<InheritWinAppVersionFrom>None</InheritWinAppVersionFrom>
		<AssemblyFileVersionSettings>None.None.DateStamp.None</AssemblyFileVersionSettings>
		<AssemblyVersionSettings>None.None.DateStamp.Increment</AssemblyVersionSettings>
	</PropertyGroup>
  
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<ShouldCreateLogs>True</ShouldCreateLogs>
		<AdvancedSettingsExpanded>True</AdvancedSettingsExpanded>
		<UpdateAssemblyVersion>True</UpdateAssemblyVersion>
		<UpdateAssemblyFileVersion>True</UpdateAssemblyFileVersion>
		<UpdateAssemblyInfoVersion>False</UpdateAssemblyInfoVersion>
		<AssemblyVersionSettings>None.None.DateStamp.Increment</AssemblyVersionSettings>
		<UpdatePackageVersion>False</UpdatePackageVersion>
		<AssemblyInfoVersionType>SettingsVersion</AssemblyInfoVersionType>
		<InheritWinAppVersionFrom>None</InheritWinAppVersionFrom>
		<AssemblyFileVersionSettings>None.None.DateStamp.Increment</AssemblyFileVersionSettings>
	</PropertyGroup>

	<ItemGroup>
		<Folder Include="MVVM\Model\" />
		<Folder Include="MVVM\ViewModel\" />
		<Folder Include="MVVM\Views\Login\" />
		<Folder Include="Config\" />
		<Folder Include="Core\" />
		<Folder Include="Services\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ChangeLogGenerator\ChangeLogConsole\ChangeLogConsole.csproj" />
		<ProjectReference Include="..\ChangeLogGenerator\ChangeLogCoreLibrary\ChangeLogCoreLibrary.csproj" />
		<ProjectReference Include="..\UIBaseClass\UIBaseClass\UIBaseClass.csproj" />
	</ItemGroup>

		<Target Name="PostBuildCleanup" AfterTargets="Build">
			<!-- Remove files starting with "ChangeLog" from the output directory -->
			<!-- Build output directory -->
			<PropertyGroup>
				<BuildOutputDir>$(MSBuildProjectDirectory)\bin\$(Configuration)\$(OutputFramework)\</BuildOutputDir>
			</PropertyGroup>

			<!-- Remove files starting with "ChangeLog" -->
			<ItemGroup>
				<UnwantedFiles Include="$(BuildOutputDir)ChangeLog*" />
			</ItemGroup>
			<Delete Files="@(UnwantedFiles)" />
		</Target>
	</Project>
